{
  "name": "@getgrit/docs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "stop": "kill -9 $(lsof -t -i:3200) || true",
    "dev": "doppler run -- next dev -p 3200",
    "clean": "rm -rf ./node_modules && rm -rf .next",
    "build": "next build",
    "test": "yarn test:visual",
    "test:ci": "yarn test:visual --retries=3",
    "test:links": "yarn run blc http://127.0.0.1:3200/ -ro --exclude http://127.0.0.1:3200/discord --exclude http://localhost:3000/* --exclude https://marketplace.visualstudio.com/* --exclude https://www.grit.io/register --exclude https://www.grit.io/careers --exclude *.png",
    "test:visual": "playwright test --config=src/__checks__/playwright.config.ts",
    "start": "next start -p 3200",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@markdoc/markdoc": "^0.2.2",
    "@markdoc/next.js": "^0.2.1",
    "@mdx-js/loader": "^2.1.3",
    "@monaco-editor/react": "^4.6.0",
    "@next/mdx": "^13.4.16",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.4",
    "@types/body-scroll-lock": "^3.1.0",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^18.0.12",
    "autoprefixer": "^10.4.8",
    "body-scroll-lock": "^4.0.0-beta.0",
    "classnames": "^2.3.1",
    "clsx": "^2.0.0",
    "critters": "^0.0.20",
    "graphql": "^16.5.0",
    "graphql-request": "^5.0.0",
    "grit-wasm-bindings": "file:./../__generated__/grit-wasm-bindings",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.52.2",
    "next": "^14.2.10",
    "next-compose-plugins": "^2.2.1",
    "nprogress": "^0.2.0",
    "prism-react-renderer": "^1.3.5",
    "quickjs-emscripten": "0.29.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "tailwindcss": "^3.1.8",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^1.6.3",
    "web-tree-sitter-wasm-bindgen": "0.20.8"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.194",
    "@types/node": "18.7.13",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "broken-link-checker": "0.7.8",
    "eslint": "8.57.0",
    "eslint-config-next": "13.1.1",
    "eslint-plugin-markdownlint": "^0.4.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "markdownlint": "^0.26.2",
    "postcss": "^8.4.16",
    "typescript": "^5.0.3"
  }
}
